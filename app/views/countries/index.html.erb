<% @navbar_item = "search" %>

<div class="container pt-4 ojv_bottom-footer-margin">
  <div class="website my-4 d-flex justify-content-center">
    <h2>Pays</h2>
  </div>

  <div class=" color d-flex justify-content-center align-items-center">
    <div class="d-flex flex-wrap justify-content-between">
      <% @countries.each do |country| %>
        <%= link_to country_path(country) do %>
          <div class="card mb-2 d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path country.photo.key, height: 100, width: 100, crop: :fill %>')">
            <h2 class="white text-center"><%= country.name %></h2>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>