<div class="m-3">
  <div class="w-100">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat btn-search">
      <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>
  <div class="d-flex flex-wrap justify-content-between">
    <% @countries.each do |country| %>
     <%= link_to country_path(country) do %>
      <div class="card mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path country.photo.key, height: 100, width: 100, crop: :fill %>')">
       <h2 class="white text-center align-self-center"><%= country.name %></h2>
      </div>
     <% end %>
    <% end %>
  </div>
</div>

